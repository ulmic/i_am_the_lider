.row-fluid
  .span5
    %p
      %img.img-polaroid.big_img{  src: @user.avatar  }
    %p
      %b= t('activerecord.attributes.user.district')
      = @user.district.title if @user.district.present?
    %p
      %b= t('activerecord.attributes.user.birth_date')
      = @user.birth_date
    - unless @user.school.blank?
      %p
        %b= t('activerecord.attributes.user.school')
        = @user.school
    - unless @user.group.blank?
      %p
        %b= t('activerecord.attributes.user.group')
        = @user.group
    - unless @user.twitter.blank?
      %p
        %b= t('activerecord.attributes.user.twitter')
        %a{ href: "#{ @user.twitter }" }
          = @user.twitter_account
    - if admin_signed_in?
      %p
        %b= t('activerecord.attributes.user.mobile_phone')
        = @user.mobile_phone
      %p
        %b= t('activerecord.attributes.user.home_phone')
        = @user.home_phone
      %p
        %b= t('activerecord.attributes.user.email')
        = @user.email
