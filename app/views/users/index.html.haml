= stylesheet_link_tag "users"
%h1
  = t('.competitors_list')
  - @users.each do |user|
    .row-fluid.has_top_margin
      %a{ href: user_path(user) }
        .span2
          %img.img-polaroid.width-200px{ src: user.avatar }
        .span3
          .row-fluid
            %h4= user.title
          .row-fluid
            %h4= user.district.title
          .row-fluid
            %h4 Дата рождения #{ user.birth_date }
        .span3
          .row_fluid
            %h4= user.school
          .row-fluid
            %h4= user.group
        - unless user.twitter.blank?
          .row-fluid
            %a{ href: user.twitter }
              .span1.logo.mini.twitter
