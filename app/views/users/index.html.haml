= stylesheet_link_tag "users"
.page-header
  %h1
    = t('.competitors_list')
- @users.each do |user|
  .row-fluid.has_top_margin
    %a{ href: user_path(user) }
      .span2
        %img.img-polaroid{ src: user.avatar.thumb_fill }
      .span3
        .row-fluid
          %h4
            - if admin_signed_in?
              = user.title
            - else
              = user.small_name
        .row-fluid
          %h4= user.district.title
        .row-fluid
          %h4 Дата рождения #{ user.birth_date }
      .span3
        .row_fluid
          %h4= user.school
        .row-fluid
          %h4= user.group
      .offset1.span1
        - unless user.twitter.blank?
          .row-fluid
            %a{ href: user.twitter }
              .logo.mini.twitter
