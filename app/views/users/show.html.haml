= render 'office'
- if current_user
  = link_to t('.edit_user'), edit_user_path(@user), class: 'btn btn-large btn-success'
  = link_to t('sign_out'), session_path, method: :delete, class: 'btn btn-large btn-important'
- if admin_signed_in?
  = link_to t('.edit_user'), edit_user_path(@user), class: 'btn btn-large btn-info'
  %br
  %h3
    = @user.confirm_state
  - if @user.new? || @user.reserved?
    = link_to t('.accept_user'), accept_admin_user_path(@user), class: 'btn btn-info'
    = link_to t('delete'), user_path(@user), method: :delete, class: 'btn btn-info'
  - if @user.new?
    = link_to t('.reserve_user'), reserve_admin_user_path(@user), class: 'btn btn-info'
