= simple_form_for @news, url: {action: action, controller: 'admin/news'} do |f|
  = f.error_notification
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :title, placeholder: t('.no_more_than_140_characters'), as: :string
    = f.label :body
    = f.cktext_area :body
    = f.label :pusblished_at
    = f.date_select :pusblished_at
    %br
    = t('.this_is_main_photo')
    = f.label :photo
    = f.file_field :photo
    .actions
      = f.button :submit, class: :btn
