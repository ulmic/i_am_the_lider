- model_class = Juror
.page-header
  %h1
    = t '.title', default: model_class.model_name.human.pluralize.titleize
    = link_to t('.stages'), admin_stages_path, class: 'btn'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:stage_id)
      %th= model_class.human_attribute_name(:login)
      %th= model_class.human_attribute_name(:password)
      %th=t 'actions', default: t("helpers.actions")
  %tbody
    - @jurors.each do |juror|
      %tr
        %td= link_to juror.id, admin_juror_path(juror)
        %td= juror.first_name
        %td= juror.last_name
        %td= juror.stage.title
        %td= juror.login
        %td= juror.password
        %td
          = link_to t('edit', default: t("helpers.links.edit")), edit_admin_juror_path(juror), class: 'btn btn-mini'
          = link_to t('destroy', default: t("helpers.links.destroy")), admin_juror_path(juror), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'
