= simple_form_for @juror, url: admin_jurors_path, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :first_name, as: :string
    = f.input :last_name, as: :string
    = f.input :login, as: :string
    = f.input :password, as: :string
    - unless @juror.stage
      = f.input :stage_id, input_html: { value: params[:id] }
    - else
      = f.input :stage_id, input_html: { value: @juror.stage.id }
  .form-actions
    = f.button :submit, t('add'), class: 'btn btn-primary'
    = link_to t('cancel', default: t("helpers.links.cancel")), admin_jurors_path, class: 'btn'
