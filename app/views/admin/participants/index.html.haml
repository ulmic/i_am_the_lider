- model_class = Event::Participant
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:full_name)
      %th= model_class.human_attribute_name(:school)
      %th= model_class.human_attribute_name(:report_id)
      %th= model_class.human_attribute_name(:group)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @participants.each do |participant|
      %tr
        %td= link_to participant.id, admin_event_path(participant.report.event)
        %td= participant.full_name
        %td= participant.school
        %td= participant.report_id
        %td= participant.group
        %td= participant.phone
        %td=l participant.created_at
        %td
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_participant_path(participant), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_admin_participant_path, class: 'btn btn-primary'
