= simple_form_for @stage, url: { action: action, controller: 'admin/stages' }, html: { class: 'form-horizontal' } do |f|
  - f.with_options input_html: { class: :span6 } do |f|
    = f.input :title, as: :string
    = f.input :description
    = f.input :begin_date
    = f.input :end_date
    = f.input :average
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('cancel', default: t("helpers.links.cancel")), admin_stages_path, class: 'btn'
