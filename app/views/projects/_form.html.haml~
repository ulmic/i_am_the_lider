= simple_form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :title
    = f.input :goal
    = f.input :tasks
    = f.input :target_audience
    = f.input :place
    = f.input :description
    = f.label :date
    = f.date_select :date
    = f.input :results
  .actions
    = f.submit 'Сохранить'
