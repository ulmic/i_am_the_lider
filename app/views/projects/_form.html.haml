= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :goal
    = f.text_field :goal
  .field
    = f.label :tasks
    = f.text_field :tasks
  .field
    = f.label :target_audience
    = f.text_field :target_audience
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :results
    = f.text_field :results
  .actions
    = f.submit 'Save'
