- model_class = Event::Report
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @report.description
%p
  %strong= model_class.human_attribute_name(:document) + ':'
  %br
  = @report.document

.form-actions
  = link_to t('.edit', default: t("helpers.links.edit")), edit_participant_event_report_path(@report), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), participant_event_report_path(@report), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
