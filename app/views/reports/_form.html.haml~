= simple_form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :member_type
    = f.input :member_count
    = f.input :venue
    = f.label :date
    = f.date_select :date
    %hr
    = f.label :archive
    = f.file_field :avatar
  .actions
    = f.submit 'Save'
