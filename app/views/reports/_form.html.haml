= simple_form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{ pluralize(@report.errors.count, "error") } #{ t('.prohibited_this_report_from_being_saved') }:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg
  - f.with_options input_html: { class: "span6" } do |f|
    .field
      = f.label :description
      = f.cktext_area :description
      %hr
      = f.label :archive
      = f.file_field :archive
    .actions
      = f.submit t('save'), class: "btn btn-large btn-success"
