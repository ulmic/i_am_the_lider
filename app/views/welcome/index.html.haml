= stylesheet_link_tag    "welcome", :media => "all"
.span3
  %h3 Проекты
  -@projects.each do |project|
    %h5= project.title
    = project.description.first(140)
    %br
    %a{:href => "/users/#{project.user.id}"}  
      %img.mini_equal_size.very_small_img{:src => project.user.avatar}
    %a{:href => "/users/#{project.user.id}"}
      = project.user.title
    %hr
.span5
  =render "blogs"
.span3
  %h3 Участники
  .row.top_row
    -if @users_first.blank?
      Список участников пуст.
      %a{:href => "/users/new"} Зарегистрируйтесь!
    -@users_first.each do |user|
      .span1.user_ot
        %img.mini_equal_size.img-circle.small{:src => user.avatar}
        %a{:href => "/users/#{user.id}"}
          %small.very_small_text= user.first_name
          %br
          %small.very_small_text= user.middle_name
  .row.top_row
    .well
      %h4 Новости конкурса
      - @news.each do |news|
        %a{:href => "/news/#{news.id}"}
          %h4= news.title
          %small= news.pusblished_at
          %p
            != strip_tags news.body.first(200)
          %small Читать далее
        %hr
%hr
  = render "twitter_blog"
