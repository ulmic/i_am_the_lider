%h3 Отчёты
-@reports.each do |report|
  %a{ href: "/users/#{ report.user_id }" }
    #BAD_SPIKE
    - if report.description
      != strip_tags report.description.first(140) + "..."
    %br
    %br
    %a{ href: "/users/#{ report.user.id }" }
      %img.mini_equal_size.img-circle.small{ src: report.user.avatar }
