%html
%head
  %title= t(".i_am_lider")
  = stylesheet_link_tag    "bootstrap_and_overrides"
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = favicon_link_tag 'favicon.ico'
  = csrf_meta_tags
%body
  %script{ type: "text/javascript" }
    refrm();
  %noscript
    %a{ href: "http://reformal.ru" }
      %img{ src: "http://media.reformal.ru/reformal.png" }
    %a{ href: "http://lider_ulgood.reformal.ru" }
      =t('.reformal_message')
  .container-fluid
    .row-fluid
      %a{ href: "http://ulmic.ru" }
        .span2.logo.mic
      %a{ href: root_path }
        .span2.well.well-small.black_link
          =t('.learning_youth_contest')
          %h4= t('.i_am_lider')
      %ul.nav.nav-pills.nav-buttons
        - if user_signed_in?
          %li
            %a{ href: user_path(current_user) }
              %h3= t('.i_am_participant')
        - else
          %li
            %a{ href: new_user_path }
              %h3= t('apply_for_participation')
          %li
            %a{ href: new_session_path }
              %h3= t('sign_in')
        %li
          %a{ href: users_path }
            %h3= t('.participants')
        %li
          %a{ href: competition_welcome_path }
            %h3= t('.competition')
        %li
          %a{ href: '/news' }
            %h3= t('.contest_news')
        %li
          %a{ href: first_stage_welcome_path }
            %h3= t('.stages')
    .row-fluid
      .span12.content
        = yield
    .row-fluid
      = render 'layouts/footer'
